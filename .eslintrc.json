{
	// Follow the JS Standard Code Style
	// https://www.npmjs.com/package/eslint-config-standard
	"extends": "standard",
	"env": {
		"node": true,
		"es6": true
	},
	"parserOptions": {
		"ecmaVersion": 2021
	},
	// Any rules here will override the JS Standard Code Style
	"rules": {
		// =======================
		//         Errors
		// =======================
		"no-unused-vars": "error",
		"no-undef": "error", 
		"semi": ["error", "always"],
		"quotes": ["error", "double"],
		"prefer-const": [1],
		"require-await": [2],
		"indent": ["error", 4]

		// =======================
		//        Warnings
		// =======================
		/* Add any rules here */
	}
}